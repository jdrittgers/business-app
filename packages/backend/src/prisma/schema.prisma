  startDate         DateTime?               @map("start_date")
  paymentFrequency  PaymentFrequency?       @map("payment_frequency")
  monthlyPayment    Decimal?                @map("monthly_payment") @db.Decimal(10, 2)
  remainingBalance  Decimal?                @map("remaining_balance") @db.Decimal(12, 2)

  // Simple mode / Lease fields
  annualPayment     Decimal?                @map("annual_payment") @db.Decimal(12, 2)

  // Lease-specific fields
  leaseEndDate      DateTime?               @map("lease_end_date")
  residualValue     Decimal?                @map("residual_value") @db.Decimal(12, 2)

  // Down payment tracking
  downPayment       Decimal?                @map("down_payment") @db.Decimal(12, 2)
  downPaymentDate   DateTime?               @map("down_payment_date")

  // Annual expense tracking (can be manually overridden)
  annualInterestOverride  Decimal?          @map("annual_interest_override") @db.Decimal(12, 2)
  annualPrincipalOverride Decimal?          @map("annual_principal_override") @db.Decimal(12, 2)

  // Payment scheduling and notifications
  nextPaymentDate     DateTime?             @map("next_payment_date")
  paymentReminderSent Boolean               @default(false) @map("payment_reminder_sent")

  // Break-even distribution - if true, cost is spread across all acres
  includeInBreakeven  Boolean               @default(false) @map("include_in_breakeven")

  notes             String?
  isActive          Boolean                 @default(true) @map("is_active")
  deletedAt         DateTime?               @map("deleted_at")
  createdAt         DateTime                @default(now()) @map("created_at")
  updatedAt         DateTime                @updatedAt @map("updated_at")

  // Relations
  equipment         Equipment               @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  payments          EquipmentLoanPayment[]

  @@index([equipmentId])
  @@index([deletedAt])
  @@index([nextPaymentDate])
  @@map("equipment_loans")
}

model EquipmentLoanPayment {
