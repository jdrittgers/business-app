}

// Equipment Maintenance Scheduling
model EquipmentMaintenance {
  id                  String               @id @default(uuid())
  equipmentId         String               @map("equipment_id")
  title               String               // "Oil Change", "Grease Fittings"
  description         String?
  maintenanceType     MaintenanceType      @map("maintenance_type")
  frequency           MaintenanceFrequency

  // Time-based scheduling
  nextDueDate         DateTime?            @map("next_due_date")
  lastCompletedDate   DateTime?            @map("last_completed_date")

  // Hours-based scheduling
  intervalHours       Int?                 @map("interval_hours")  // e.g., every 50 hours
  lastCompletedHours  Int?                 @map("last_completed_hours")
  nextDueHours        Int?                 @map("next_due_hours")

  // Cost tracking
  estimatedCost       Decimal?             @map("estimated_cost") @db.Decimal(10, 2)

  // Reminder tracking
  reminderSent        Boolean              @default(false) @map("reminder_sent")
  reminderDays        Int                  @default(7) @map("reminder_days")

  // Task integration
  autoCreateTask      Boolean              @default(true) @map("auto_create_task")
  currentTaskId       String?              @unique @map("current_task_id")

  isActive            Boolean              @default(true) @map("is_active")
  createdAt           DateTime             @default(now()) @map("created_at")
  updatedAt           DateTime             @updatedAt @map("updated_at")

  // Relations
  equipment           Equipment            @relation(fields: [equipmentId], references: [id], onDelete: Cascade)
  currentTask         Task?                @relation(fields: [currentTaskId], references: [id], onDelete: SetNull)
  history             MaintenanceHistory[]

  @@index([equipmentId])
  @@index([nextDueDate])
  @@index([isActive, reminderSent])
  @@map("equipment_maintenance")
}

// Maintenance Completion History
model MaintenanceHistory {
  id                  String               @id @default(uuid())
  maintenanceId       String               @map("maintenance_id")
  completedDate       DateTime             @map("completed_date")
  completedByUserId   String?              @map("completed_by_user_id")
  hoursAtCompletion   Int?                 @map("hours_at_completion")
  actualCost          Decimal?             @map("actual_cost") @db.Decimal(10, 2)
  notes               String?
