// ===== Chemical Plan Template Models =====

// Reusable chemical plan template
model ChemicalPlanTemplate {
  id            String        @id @default(uuid())
  businessId    String        @map("business_id")
  name          String        // e.g., "2025 Corn Herbicide Program"
  description   String?
  commodityType CommodityType? @map("commodity_type") // Optional: for filtering (CORN, SOYBEANS, WHEAT)
  passType      PassType?     @map("pass_type") // Optional: PRE, POST, FUNGICIDE, IN_FURROW
  year          Int?          // Optional: crop year this plan is for
  isActive      Boolean       @default(true) @map("is_active")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  // Relations
  business      Business                  @relation(fields: [businessId], references: [id], onDelete: Cascade)
  items         ChemicalPlanTemplateItem[]
  applications  ChemicalPlanApplication[]

  @@unique([businessId, name])
  @@index([businessId])
  @@index([commodityType])
  @@index([passType])
  @@index([year])
  @@map("chemical_plan_templates")
}

// Products within a template
model ChemicalPlanTemplateItem {
  id          String   @id @default(uuid())
  templateId  String   @map("template_id")
  chemicalId  String   @map("chemical_id")
  ratePerAcre Decimal  @map("rate_per_acre") @db.Decimal(10, 4) // e.g., 2.5 gal/acre
  notes       String?  // Application notes
  order       Int      @default(0) // Display order
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  template    ChemicalPlanTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  chemical    Chemical             @relation(fields: [chemicalId], references: [id])
  usages      FarmChemicalUsage[]  // Farms using this template item

  @@index([templateId])
  @@index([chemicalId])
  @@map("chemical_plan_template_items")
}

// Track which farms have a template applied
model ChemicalPlanApplication {
  id           String   @id @default(uuid())
  templateId   String   @map("template_id")
  farmId       String   @map("farm_id")
  appliedAt    DateTime @default(now()) @map("applied_at")
  appliedById  String?  @map("applied_by_id") // User ID
  hasOverrides Boolean  @default(false) @map("has_overrides") // Flag if field has modifications

  // Relations
  template     ChemicalPlanTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  farm         Farm                 @relation(fields: [farmId], references: [id], onDelete: Cascade)
  appliedBy    User?                @relation("ChemicalPlanAppliedBy", fields: [appliedById], references: [id])

  @@unique([templateId, farmId])
  @@index([templateId])
  @@index([farmId])
  @@map("chemical_plan_applications")
}
