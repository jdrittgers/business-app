{
  "name": "@business-app/backend",
  "version": "1.0.0",
  "private": true,
  "main": "src/server.ts",
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate --schema=src/prisma/schema.prisma && tsc",
    "start": "prisma migrate deploy --schema=src/prisma/schema.prisma && node dist/server.js",
    "postinstall": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=src/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "prisma:seed": "tsx src/prisma/seed.ts",
    "seed:prod": "tsx src/prisma/seed-production.ts",
    "seed:grain": "tsx src/prisma/seed-grain-entities.ts",
    "seed:grain-data": "tsx src/prisma/seed-grain-data.ts"
  },
  "dependencies": {
    "@business-app/shared": "*",
    "@prisma/client": "^5.8.1",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.6.1",
    "web-push": "^3.6.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/web-push": "^3.6.4",
    "prisma": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
